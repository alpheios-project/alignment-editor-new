{
  "name": "alpheios-alignment-editor",
  "version": "1.4.4",
  "libName": "Alpheios Translation Alignment editor",
  "description": "The Alpheios Translation Alignment editor allows you to create word-by-word alignments between two texts.",
  "main": "src/index.js",
  "scripts": {
    "set-node-build-deps": "npx install-peerdeps@v2.0.2 alpheios-node-build --dev --only-peers",
    "build": "npm run lint && npm run build-output && npm run build-regular && npm run build-pages",
    "build-output": "node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs -m all -M all -p vue -c config-output.mjs",
    "build-regular": "node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs -m all -M all -p vue -c config.mjs",
    "build-pages": "node --experimental-modules ./node_modules/alpheios-node-build/dist/build.mjs -m all -M all -p vue -c config-pages.mjs",
    "lint": "eslint --no-eslintrc -c eslint-standard-conf.json --fix src/**/*.js",
    "test": "jest tests --coverage",
    "test-lib": "jest tests/lib --coverage",
    "test-vue": "jest tests/vue --coverage",
    "test-a": "jest tests/lib/controllers/app-controller.test.js",
    "test-b": "jest tests/vue/align-editor/segment-block.test.js",
    "test-c": "jest tests/lib/data/actions/tokens-edit-actions.test.js",
    "test-f": "jest tests/lib/tokenizers/simple-local-tokenizer.test.js",
    "test-d": "jest tests/lib/storage/indexed-db-adapter.test.js",
    "test-e": "jest tests/_output/vue/app.test.js",
    "test-g": "jest tests/corrupted/corrupted-alignments2.test.js",
    "github-build": "node --experimental-modules --experimental-json-modules ./github-build.mjs",
    "dev": "npm run build && http-server -c-1 -p 8888 & onchange src -- npm run build",
    "dist": "npm run dist-copy && npm run dist-zip && npm run dist-clean",
    "dist-copy": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs copy --s=/public --t=dist-temp  --clean",
    "dist-zip": "node --experimental-modules ./node_modules/alpheios-node-build/dist/zip.mjs --s=/dist-temp --t=dist-zip --f=alpheios-alignment-editor.zip",
    "dist-clean": "node --experimental-modules ./node_modules/alpheios-node-build/dist/files.mjs clean --t=dist-temp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpheios-project/alignment-editor-new.git"
  },
  "author": "The Alpheios Project, Ltd.",
  "license": "ISC",
  "devDependencies": {
    "@actions/core": "^1.7.0",
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/register": "^7.17.7",
    "@babel/runtime": "^7.17.9",
    "@vue/babel-preset-app": "^5.0.4",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/test-utils": "^1.3.0",
    "alpheios-core": "https://github.com/alpheios-project/alpheios-core.git#incr-3.4.x",
    "alpheios-messaging": "https://github.com/alpheios-project/alpheios-messaging",
    "alpheios-node-build": "github:alpheios-project/node-build#v5",
    "archiver": "^5.3.1",
    "autoprefixer": "^10.4.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "bytes": "^3.1.0",
    "chalk": "^5.0.1",
    "command-line-args": "^5.2.1",
    "copy-webpack-plugin": "^10.2.4",
    "coveralls": "^3.1.1",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "dotenv-webpack": "^7.1.0",
    "ejs": "^3.1.8",
    "eslint": "^8.14.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "eslint-scope": "^7.1.1",
    "fake-indexeddb": "^3.1.7",
    "fibers": "^5.0.1",
    "file-loader": "^6.2.0",
    "fs-extra": "^10.1.0",
    "git-branch": "^2.0.1",
    "html-inline-css-webpack-plugin": "^1.11.1",
    "html-inline-script-webpack-plugin": "^3.0.0",
    "html-loader": "^3.1.0",
    "html-loader-jest": "^0.2.1",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^0.12.3",
    "identity-obj-proxy": "^3.0.0",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "inspectpack": "^4.7.1",
    "intl-messageformat": "^9.13.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^2.6.0",
    "node-sass": "^7.0.1",
    "nth-check": "^2.0.1",
    "papaparse": "^5.3.2",
    "path": "^0.12.7",
    "postcss": "^8.4.13",
    "postcss-discard-comments": "^5.1.1",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^6.2.1",
    "postcss-safe-important": "^1.2.1",
    "postcss-scss": "^4.0.4",
    "raw-loader": "^4.0.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "source-map-loader": "^3.0.1",
    "stream": "0.0.2",
    "style-loader": "^1.3.0",
    "terser-webpack-plugin": "^3.1.0",
    "url-loader": "^4.1.1",
    "uuid": "^3.4.0",
    "vue": "^2.6.12",
    "vue-agile": "^1.1.3",
    "vue-eslint-parser": "^7.11.0",
    "vue-jest": "^3.0.7",
    "vue-js-modal": "^2.0.1",
    "vue-loader": "^15.9.8",
    "vue-multiselect": "^2.1.6",
    "vue-router": "^3.5.3",
    "vue-style-loader": "^4.1.3",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.6.14",
    "vue-template-loader": "^1.1.0",
    "vuedraggable": "^2.24.3",
    "webpack": "^5.72.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-merge": "^5.8.0"
  },
  "jest": {
    "verbose": true,
    "globals": {
      "DEVELOPMENT_MODE_BUILD": true
    },
    "moduleNameMapper": {
      "^@[/](.+)": "<rootDir>/src/$1",
      "^@tests[/](.+)": "<rootDir>/tests/$1",
      "^@vue-runtime$": "vue/dist/vue.runtime.common.js",
      "^@vuedraggable": "<rootDir>/node_modules/vuedraggable/dist/vuedraggable.umd.min.js",
      "alpheios-client-adapters": "<rootDir>/node_modules/alpheios-core/packages/client-adapters/dist/alpheios-client-adapters.js",
      "alpheios-data-models": "<rootDir>/node_modules/alpheios-core/packages/data-models/dist/alpheios-data-models.js",
      "alpheios-l10n": "<rootDir>/node_modules/alpheios-core/packages/l10n/dist/alpheios-l10n.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!vue-agile/)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      ".*\\.(vue)$": "vue-jest",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/fileTransform.js",
      "^.*\\.svg$": "<rootDir>/svgTransform.js",
      "^.+\\.html$": "html-loader-jest",
      "\\.(css|less|sass|scss)$": "<rootDir>/styleMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/essential"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 2020,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "rules": {
      "no-prototype-builtins": "warn",
      "dot-notation": "warn",
      "accessor-pairs": "warn"
    }
  },
  "eslintIgnore": [
    "**/dist",
    "**/support"
  ],
  "dependencies": {
    "@splidejs/splide": "^4.0.2",
    "vuex": "^3.6.2",
    "yt-player": "^3.5.0"
  }
}
